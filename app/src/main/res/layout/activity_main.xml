<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnHttpGetRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Http/Volley/StringRequest, GET"/>

    <Button
        android:id="@+id/btnHttpPostRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Http/Volley/StringRequest, POST"/>

    <Button
        android:id="@+id/btnHttpsGetJsonRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Https/Volley/JsonObjectRequest, GET"/>

    <Button
        android:id="@+id/btnHttpsPostJsonRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Https/Volley/JsonObjectRequest, POST"/>

    <Button
        android:id="@+id/btnHttpsGetJsonArrayRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Https/Volley/JsonArrayRequest, GET"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>


</LinearLayout>
